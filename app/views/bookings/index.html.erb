<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Price</th>
      <th>User</th>
      <th>Name</th>
      <th>No of seats</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.flight.to_fro %></td>
        <td><%= booking.price %></td>
        <td><%= booking.user_id %></td>
        <td><%= booking.name %></td>
        <td><%= booking.no_of_seats %></td>
        <td><%= booking.total %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

